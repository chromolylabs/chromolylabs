---
import MissionPatch from './MissionPatch.astro';
import ContactModal from './ContactModal.astro';
import CometButton from './CometButton.astro';
// No props needed for now
---

<div class="relative z-10 text-center max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <MissionPatch className="mb-12" />

    <h1 class="font-cyber text-5xl md:text-7xl lg:text-8xl mb-8 chrome-text tracking-wider transform hover:scale-[1.02] transition-transform duration-300 drop-shadow-[0_0_4px_rgba(212,175,55,0.05)] drop-shadow-[0_0_6px_rgba(212,175,55,0.01)] fade-in-up delay-200">
        CHROMOLY LABS
    </h1>

    <!-- Subtitle with improved styling -->
    <div class="mb-12 fade-in-up delay-300">
        <p class="font-tech text-xl md:text-2xl glitch tracking-widest inline-block transform hover:scale-105 transition-transform duration-300 text-starlight/80">
            Building Digital Products That Matter.
        </p>
    </div>

    <!-- Description with improved readability -->
    <div class="font-mono text-base md:text-lg lg:text-xl max-w-2xl mx-auto mb-12 text-starlight/70 leading-relaxed fade-in-up delay-400">
        <p class="mb-4">
            We build badass digital products that solve real problems for real people.
            From mobile apps to data engineering, we turn ambitious ideas into reality.
        </p>
    </div>

    <CometButton text="INITIATE CONTACT" className="delay-500" />
    <ContactModal />
</div> 