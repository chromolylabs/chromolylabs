---
// No props needed for now
---

<div class="relative z-10 text-center max-w-4xl mx-auto">
    <!-- Enhanced mission patch -->
    <div class="mx-auto mb-12 w-28 h-28 md:w-32 md:h-32 rounded-full space-gradient flex items-center justify-center border-2 border-chrome shadow-lg transform hover:scale-105 transition-transform duration-300">
        <span class="font-cyber text-3xl md:text-4xl text-starlight">CL</span>
    </div>

    <h1 class="font-cyber text-5xl md:text-7xl lg:text-8xl mb-8 chrome-text tracking-wider transform hover:scale-[1.02] transition-transform duration-300">
        CHROMOLY LABS
    </h1>

    <!-- Subtitle with improved styling -->
    <div class="mb-12">
        <p class="font-tech text-xl md:text-2xl glitch tracking-widest inline-block transform hover:scale-105 transition-transform duration-300">
            Building Digital Products That Matter.
        </p>
    </div>

    <!-- Description with improved readability -->
    <p class="font-tech text-base md:text-lg lg:text-xl max-w-2xl mx-auto mb-12 text-starlight/90 leading-relaxed">
        We build badass digital products that solve real problems for real people.
        From mobile apps to data engineering, we craft solutions that matter.
    </p>

    <!-- Enhanced CTA button with comet streak -->
    <div class="group relative">
        <button 
            x-data
            @click="$dispatch('open-modal')"
            class="inline-block bg-transparent border-2 border-plasma text-plasma group-hover:bg-plasma/10 
            font-cyber px-6 sm:px-8 py-3 sm:py-4 rounded-lg transition-all duration-300 plasma-glow tracking-widest
            transform hover:scale-105 hover:border-opacity-80 relative overflow-hidden text-sm sm:text-base">
            <span class="relative z-10">INITIATE CONTACT</span>
            <div class="absolute inset-0 opacity-0 group-hover:opacity-20 bg-gradient-to-r from-plasma via-transparent to-plasma transition-opacity duration-300"></div>
        </button>
        
        <!-- Vertical comet streak -->
        <div class="absolute left-1/2 transform -translate-x-1/2 top-full mt-2">
            <div class="w-px h-16 sm:h-24 bg-gradient-to-b from-plasma to-transparent opacity-50"></div>
            <div class="w-0.5 h-4 bg-plasma rounded-full blur-sm absolute -top-1 left-1/2 transform -translate-x-1/2 animate-pulse"></div>
        </div>
    </div>

    <!-- Contact Form Modal -->
    <div x-data="{ isOpen: false }" 
         @open-modal.window="isOpen = true"
         @keydown.escape.window="isOpen = false"
         x-show="isOpen" 
         class="fixed inset-0 z-50 overflow-y-auto" 
         x-cloak>
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-space-black/80 backdrop-blur-sm" @click="isOpen = false"></div>
        
        <!-- Modal -->
        <div class="relative min-h-screen flex items-center justify-center p-4">
            <div class="relative bg-deep-space border border-plasma/20 rounded-lg max-w-lg w-full p-6 sm:p-8 shadow-xl transform transition-all"
                 @click.stop>
                <!-- Close button -->
                <button @click="isOpen = false" class="absolute top-4 right-4 text-starlight/60 hover:text-plasma">
                    <span class="sr-only">Close</span>
                    <span class="text-xl">Ã—</span>
                </button>

                <!-- Form Header -->
                <h3 class="font-cyber text-xl mb-6 text-plasma">TRANSMISSION INTERFACE</h3>

                <!-- Contact Form -->
                <form action="https://formspree.io/f/mqaedbag" method="POST" class="space-y-4">
                    <div>
                        <label class="block font-mono text-sm text-starlight/80 mb-1" for="name">NAME</label>
                        <input type="text" id="name" name="name" required
                               class="w-full bg-space-black/50 border border-starlight/20 rounded px-3 py-2 text-starlight/90 
                                      focus:border-plasma focus:ring-1 focus:ring-plasma outline-none transition-colors
                                      font-mono text-sm">
                    </div>
                    <div>
                        <label class="block font-mono text-sm text-starlight/80 mb-1" for="email">EMAIL</label>
                        <input type="email" id="email" name="email" required
                               class="w-full bg-space-black/50 border border-starlight/20 rounded px-3 py-2 text-starlight/90 
                                      focus:border-plasma focus:ring-1 focus:ring-plasma outline-none transition-colors
                                      font-mono text-sm">
                    </div>
                    <div>
                        <label class="block font-mono text-sm text-starlight/80 mb-1" for="message">MESSAGE</label>
                        <textarea id="message" name="message" rows="4" required
                                  class="w-full bg-space-black/50 border border-starlight/20 rounded px-3 py-2 text-starlight/90 
                                         focus:border-plasma focus:ring-1 focus:ring-plasma outline-none transition-colors
                                         font-mono text-sm"></textarea>
                    </div>
                    <button type="submit" 
                            class="w-full bg-plasma/10 border border-plasma text-plasma hover:bg-plasma/20 
                                   font-cyber px-6 py-3 rounded transition-colors duration-300">
                        TRANSMIT MESSAGE
                    </button>
                </form>
            </div>
        </div>
    </div>
</div> 