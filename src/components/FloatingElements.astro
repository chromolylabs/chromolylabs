<div class="absolute inset-0 pointer-events-none">
    <!-- Top left element -->
    <div 
        class="absolute w-3 h-3 blur-sm float opacity-50 rounded-full bg-nebula
        top-[15%] left-[15%]
        sm:w-4 sm:h-4 sm:top-[20%] sm:left-[25%]
        lg:w-5 lg:h-5 lg:top-[15%] lg:left-[25%]"
        style="animation-delay: -1.5s;"
    ></div>

    <!-- Top right element -->
    <div 
        class="absolute w-2 h-2 blur-sm float opacity-50 rounded-full bg-plasma
        top-[25%] right-[15%]
        sm:w-3 sm:h-3 sm:top-[35%] sm:right-[20%]
        lg:w-4 lg:h-4 lg:top-[30%] lg:right-[20%]"
        style="animation-delay: -2.5s;"
    ></div>
    
    <!-- Bottom element -->
    <div 
        class="absolute w-2 h-2 blur-sm float opacity-50 rounded-full bg-nasa-red
        bottom-[15%] left-[20%]
        sm:w-2.5 sm:h-2.5 sm:bottom-[25%] sm:left-[25%]
        lg:w-3 lg:h-3 lg:bottom-[25%] lg:left-[30%]"
        style="animation-delay: -3.5s;"
    ></div>
    
    <!-- Additional element (visible on mobile and tablet, hidden on desktop) -->
    <div 
        class="absolute w-2 h-2 blur-sm float opacity-30 rounded-full bg-cosmic-blue
        bottom-[35%] right-[10%]
        sm:w-2.5 sm:h-2.5 sm:bottom-[40%] sm:right-[15%]
        lg:hidden"
        style="animation-delay: -4s;"
    ></div>
</div> 