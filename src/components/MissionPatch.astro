---
interface Props {
    size?: 'sm' | 'md' | 'lg';
    className?: string;
}

const { size = 'md', className = '' } = Astro.props;

const sizeClasses = {
    sm: 'w-24 h-24',
    md: 'w-28 h-28 md:w-32 md:h-32',
    lg: 'w-36 h-36 md:w-40 md:h-40'
};
---

<div class={`mx-auto rounded-full space-gradient flex items-center justify-center border-2 border-chrome/80 
    shadow-[0_8px_32px_rgba(0,0,0,0.5)] transform hover:scale-105 transition-transform duration-300 
    relative overflow-hidden fade-in-up ring-2 ring-chrome/30 ring-offset-4 ring-offset-transparent
    ${sizeClasses[size]} ${className}`}>
    <!-- Border glow effect -->
    <div class="absolute -inset-[1px] rounded-full bg-chrome/20 blur-[2px]"></div>
    <!-- Base gradient overlay for depth -->
    <div class="absolute inset-0 bg-gradient-radial from-cosmic-blue/80 via-deep-space/80 to-deep-space/95 scale-150"></div>
    <!-- Inner shadow effect -->
    <div class="absolute inset-0 bg-gradient-radial from-transparent via-space-black/40 to-space-black/60 scale-125"></div>
    <!-- Deep inner glow -->
    <div class="absolute inset-0 bg-gradient-radial from-cosmic-blue/30 via-transparent to-transparent scale-50"></div>
    <!-- Subtle top highlight for sphere effect -->
    <div class="absolute inset-x-0 -top-1/2 h-full bg-gradient-to-b from-starlight/10 via-starlight/5 to-transparent transform scale-y-50"></div>
    <!-- Side highlight -->
    <div class="absolute -right-1/4 inset-y-0 w-1/2 bg-gradient-to-l from-starlight/5 via-transparent to-transparent"></div>
    <!-- Bottom shadow for depth -->
    <div class="absolute inset-x-0 bottom-0 h-1/2 bg-gradient-to-t from-space-black/70 via-space-black/40 to-transparent"></div>
    <!-- Glass reflection overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-starlight/5 to-transparent opacity-50"></div>
    <!-- Text with enhanced shadow -->
    <span class="font-cyber text-4xl md:text-5xl text-starlight/90 relative z-10 drop-shadow-[0_2px_8px_rgba(0,0,0,0.6)]">CL</span>
</div> 